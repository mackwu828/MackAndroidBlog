    <application
        android:name=".ComponentApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- service -->
        <service android:name=".service.TestService">
            <intent-filter android:priority="1000">
                <action android:name="com.mackwu.component.ACTION_SERVICE" />
            </intent-filter>
        </service>
        <!--
            android:name="android.accessibilityservice.AccessibilityService" 声明辅助功能服务
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE" 权限
            android:label="xxx" 名称
            android:resource="@xml/accessibilty_config" 配置
        -->
        <service
            android:name=".service.access.AccessService"
            android:label="accessibility test"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibilty_config" />
        </service>

