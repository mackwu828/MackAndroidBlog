        <!-- provider -->
        <provider
            android:name=".provider.student.StudentProvider"
            android:authorities="com.mackwu.component.provider.student.StudentProvider" />

        <!--   activity   -->
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecondActivity" />
        <activity android:name=".provider.student.StudentActivity" />
        <activity android:name=".provider.weather.WeatherActivity" />
        <activity android:name=".other.db.DbActivity" />
        <activity android:name=".other.SettingActivity" />
        <activity android:name=".other.TimerActivity" />
        <activity android:name=".other.NoStatusBarActivity" />
        <activity android:name=".ui.FragmentActivity" />
        <activity android:name=".ui.LottieActivity" />
        <activity android:name=".ui.WifiActivity" />
        <activity android:name=".ui.ScreensaverActivity" />

    </application>

</manifest>