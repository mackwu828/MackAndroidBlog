<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:clipChildren="false">

    <TextView
        android:id="@+id/tv_barrage_1"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_barrage_2"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_146"
        app:layout_constraintBottom_toBottomOf="@+id/tv_barrage_1"
        app:layout_constraintStart_toEndOf="@+id/tv_barrage_1"
        app:layout_constraintTop_toTopOf="@+id/tv_barrage_1" />

    <TextView
        android:id="@+id/tv_barrage_3"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_290"
        android:layout_marginTop="@dimen/dp_180"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_barrage_4"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_308"
        app:layout_constraintBottom_toBottomOf="@+id/tv_barrage_3"
        app:layout_constraintStart_toEndOf="@+id/tv_barrage_3"
        app:layout_constraintTop_toTopOf="@+id/tv_barrage_3" />

    <!--    -->
    <TextView
        android:id="@+id/tv_barrage_5"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_160"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_barrage_6"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_146"
        app:layout_constraintBottom_toBottomOf="@+id/tv_barrage_5"
        app:layout_constraintStart_toEndOf="@+id/tv_barrage_5"
        app:layout_constraintTop_toTopOf="@+id/tv_barrage_5" />

    <TextView
        android:id="@+id/tv_barrage_7"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_298"
        android:layout_marginBottom="@dimen/dp_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_barrage_8"
        style="@style/BarrageSubView"
        android:layout_marginStart="@dimen/dp_308"
        app:layout_constraintBottom_toBottomOf="@+id/tv_barrage_7"
        app:layout_constraintStart_toEndOf="@+id/tv_barrage_7"
        app:layout_constraintTop_toTopOf="@+id/tv_barrage_7" />

    <!--  主弹幕  -->
    <ImageView
        android:id="@+id/iv_barrage_main"
        android:layout_width="@dimen/dp_1000"
        android:layout_height="@dimen/dp_500"
        android:layout_marginStart="@dimen/dp_185"
        android:src="@drawable/bullet_chat_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_barrage_main"
        android:layout_width="@dimen/dp_618"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_260"
        android:layout_marginTop="@dimen/dp_15"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:maxLines="3"
        android:textColor="#4F5C6C"
        android:textSize="@dimen/sp_66"
        app:layout_constraintBottom_toBottomOf="@id/iv_barrage_main"
        app:layout_constraintStart_toStartOf="@id/iv_barrage_main"
        app:layout_constraintTop_toTopOf="@id/iv_barrage_main" />

</androidx.constraintlayout.widget.ConstraintLayout>