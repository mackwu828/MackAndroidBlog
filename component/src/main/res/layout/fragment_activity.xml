<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test" />

    <!-- 启动方式 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="启动方式：基础" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start" />

        <Button
            android:id="@+id/btn_start_for_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="start_for_result" />

        <Button
            android:id="@+id/btn_start_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="启动Activity的最佳方式" />
    </LinearLayout>


    <!--  启动另一个进程的Activity  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="启动方式：启动另一个进程的Activity" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_start_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过包名和Activity名称启动" />

        <Button
            android:id="@+id/btn_start_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过action" />

        <Button
            android:id="@+id/btn_start_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通过LaunchIntent" />
    </LinearLayout>


</LinearLayout>